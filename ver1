import tkinter as tk
from tkinter import ttk
from tkinter.constants import ANCHOR, X




win=tk.Tk()
win.title("KSCNP")

#라벨, 만들기 클래스

class LabelClass(tk.Tk):
    def __init__(self):
        
        pass

    def Make_label(self,num1,num2,text):
        self.label1=tk.Label(place_of_order,text=text,padx=5,pady=5)
        self.label1.grid(column=num1,row=num2)

    def Make_label2(self,num1,num2,text):
        self.label1=tk.Label(product_information,text=text,padx=5,pady=5)
        self.label1.grid(column=num1,row=num2)
    
    def Make_label3(self,num1,num2,text):
        self.label1=tk.Label(printing_information_ouput,text=text,padx=5,pady=5)
        self.label1.grid(column=num1,row=num2)

    def Make_label4(self,num1,num2,text):
        self.label1=tk.Label(printing_information_kscnp,text=text,padx=5,pady=5)
        self.label1.grid(column=num1,row=num2)
        
